
@{
    ViewBag.Title = "Administrator page";
}

<div class="container">
    <div class="row" style="margin-top:15px">
        <div class="col-md-3">

            <div class="list-group" title="TASKS" id="taskList">
                <a href="#" class="list-group-item disabled"><b>Tasks</b></a>
            </div>
            <button type="button" class="btn btn-success btn-circle center-block add_btn" onclick="addTask()" name="create-task-button">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>
        <div class="col-md-9">   
            <div class="row">
                <div class="col-md-12">
                    <div class="btn-group">
                        <button type="submit" name="save-task-button" class="btn btn-success"><span class="glyphicon glyphicon-save"></span> Save</button>
                        <button type="button" name="delete-task-button" class="btn btn-danger">Delete <span class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
            </div>        
            <div class="row sp">
                <div class="col-md-12">
                    <input type="text" class="form-control" id="task_name" placeholder="Task name">    
                </div>         
            </div>                 
            <textarea style="resize:none" class="form-control sp" rows="15" id="task_description" placeholder="Task description"></textarea>            

            <!-- Second row-->
            <div class="row">
                <h2 class="h3" style="text-align:center;">Rules</h2>
            </div>
            <!-- CheckBox with rules type -->
            <div id="rule_list">
                <div class="rule row">
                    <div class="col-md-3">
                        <div class="dropdown">
                            <button class="btn btn-default dropdown-toggle" type="button" id="menu1" style="width:100%" data-toggle="dropdown">
                                Add
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" id="RuleTypeDropDown" role="menu" aria-labelledby="menu1">
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Test_1</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Test_2</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Test_3</a></li>
                                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Test_4</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <textarea style="resize:none" class="form-control" rows="1" id="link" placeholder="Rule selector"></textarea>
                    </div>
                    <div class="col-md-4">
                        <textarea style="resize:none" class="form-control" rows="1" id="link" placeholder="Rule value"></textarea>
                    </div>
                    <div class="col-md-1">
                        <button type="button" name="add-parameter-button" class="btn btn-danger pull-right">
                            <span class="glyphicon glyphicon-minus"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:15px">
                <div class="col-md-12 center-block">
                    <button type="button" name="add-parameter-button" class="btn btn-success center-block">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>
            </div>
        </div>                
    </div>    
</div>

@section scripts {
    <script>
        var uri = '/api/tasks/';

        function createRuleTypeDropdown() {
            return $('<div></div>').addClass("dropdown")
                .append($('<button></button>').addClass("btn btn-default dropdown-toggle").attr("type", "button").attr("style", "width:100%").attr("id", "menu1").attr("data-toggle", "dropdown")
                    .html('Add<span class="caret"></span>'))
                .append($('<ul></ul>').addClass("dropdown-menu").attr("role", "menu").attr("aria-labelledby", "menu1")
                    .html('<li role="presentation"><a role="menuitem" tabindex="-1" href="#">Test_1</a></li>'));
        }
        function createRule(rule) {
            var ruleDiv = $('<div></div>').addClass("rule row")
                .append($('<div></div>').addClass("col-md-3")
                    .append(createRuleTypeDropdown()))
                .append($('<div></div>').addClass("col-md-4")
                        .append($('<textarea></textarea>').addClass("form-control").attr("style", "resize:none").attr("rows", "1").attr("id", "link")
                            .val(rule.Selector)))
                .append($('<div></div>').addClass("col-md-4")
                        .append($('<textarea></textarea>').addClass("form-control").attr("style", "resize:none").attr("rows", "1").attr("id", "link")
                            .val(rule.Value)))
                .append($('<div></div>').addClass("col-md-1")
                    .append($('<button></button>').attr("type", "button").addClass("btn btn-danger pull-right").attr("name", "add-parameter-button").attr("style", "height:35px")
                        .append($('<span></span>').addClass("glyphicon glyphicon-plus"))));

            return ruleDiv;
        }
        function displayTask(id) {
            $.getJSON(uri.concat(id))
                .done(function (task) {
                    $('#task_description').val(task.Description);
                    $('#task_name').val(task.Name);
                    $('#rule_list').empty();
                    $.each(task.Rule, function(key, rule) {
                        $('#rule_list').append(createRule(rule));
                    });
                });
        }


        $(document).ready(function() {
            // Send an AJAX request
            $.getJSON(uri)
                .done(function(data) {
                    // On success, 'data' contains a list of products.
                    $.each(data, function(key, item) {
                        // Add a list item for the product.
                        $('<a></a>').attr("href", "#").attr("class", "list-group-item")
                            .html(item.Name)
                            .on('click', function() {
                                displayTask(item.Id);
                            })
                            .appendTo($('#taskList'));
                    });
                });
           
        });
        function addTask() {
            $("#taskList").append("<li class='list-group-item'>Task</li>");
        }

        $('.list-group-item').on('click', function (e) {
            var previous = $(this).closest(".list-group").children(".active");
            previous.removeClass('active');
            $(e.target).addClass('active');
        });
        function formatItem(item) {
            return item.Name;
        }
    </script>
}